<div>
        @if (ViewData["WishList_Message"] as string != null)
        {
            <div class="alert alert-dismissible alert-primary">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>@(ViewData["WishList_Message"] as string)</strong>
            </div>
        }
    @if (ViewData["OrderList_Message"] as string != null)
    {
        <div class="alert alert-dismissible alert-primary">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>@(ViewData["OrderList_Message"] as string)</strong>
        </div>
    }
</div>
<div class="secondary-bg scroll-card ">
    <div class="horizontal-scroll-wrapper">
        @{
            int i = 0;
            foreach (var item in Model)
            {
                if (i < 8)
                {
                    <div class="card border-primary mb-3" style="max-width: 20rem;">
                        <div class="card-title"><strong>@item.Title</strong></div>
                        <div>
                            <div class="card-text">Author : @item.Author</div>
                            <div class="card-text">Genere : @item.GenreID</div>
                            <div class="card-text">Price : @item.Price</div>
                            <div class="btn-group-sm btns-card">
                                @Html.ActionLink("_Buy", "AddToOrder", "User", new { id = @item.BookID }, new { @class = "btn btn-outline-primary btn-sm fa fa-shopping-cart" })
                                @Html.ActionLink("_Wishlist", "AddToWishList", "User", new { id = @item.BookID }, new { @class = "btn btn-outline-info btn-sm fas fa-heart" })
                            </div>
                        </div>
                    </div>
                    <div></div>
                }
                i++;
            }
        }
    </div>
</div>
