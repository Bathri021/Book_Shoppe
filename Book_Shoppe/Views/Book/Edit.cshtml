@model Book_Shoppe.Models.EditBookFormVM
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <h1>Edit Book Details</h1>
</div>


@using (Html.BeginForm("Update", "Book", FormMethod.Post))
{

    @Html.HiddenFor(Model => Model.BookID)
    @Html.HiddenFor(Model=>Model.UserID)
    <div>
        <div class="form-group">
            <div>
                @Html.LabelFor(Model => Model.Title, new { @class = "col-form-label" })
            </div>
            <div>
                @Html.TextBoxFor(Model => Model.Title, null, new { id = "inputDefault", @class = "form-control" })
            </div>
            <div>
                @Html.ValidationMessageFor(Model=>Model.Title)
            </div>
        </div>
        <div class="form-group">
            <div>
                @Html.LabelFor(Model => Model.Author, new { @class = "col-form-label" })
            </div>
            <div>
                @Html.TextBoxFor(Model => Model.Author, new { id = "inputDefault", @class = "form-control" })
            </div>
            <div>
                @Html.ValidationMessageFor(Model=>Model.Author)
            </div>
        </div>
        <div class="form-group">
            <div>
                @Html.LabelFor(Model => Model.Genere, new { @class = "col-form-label" })
            </div>
            <div>
                @Html.TextBoxFor(Model => Model.Genere, new { id = "inputDefault", @class = "form-control" })
            </div>
            <div>
                @Html.ValidationMessageFor(Model=>Model.Genere)
            </div>
        </div>
        <div>
            <div>
                @Html.LabelFor(Model => Model.Price, new { @class = "col-form-label" })
            </div>
            <div>
                @Html.TextBoxFor(Model => Model.Price, new { id = "inputDefault", @class = "form-control" })
            </div>
            <div>
                @Html.ValidationMessageFor(Model=>Model.Price)
            </div>
        </div>
        <div>
            <div>
                @Html.LabelFor(Model => Model.NoOfPages, new { @class = "col-form-label" })
            </div>
            <div>
                @Html.TextBoxFor(Model => Model.NoOfPages, new { id = "inputDefault", @class = "form-control" })
            </div>
            <div>
                @Html.ValidationMessageFor(Model=>Model.NoOfPages)
            </div>
        </div>
        <br />
        <table>
            <tr>
                <td>
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-outline-info" })
                </td>
                <td>
                    <input type="submit" class="btn btn-outline-primary" id="submit" />
                </td>
            </tr>
        </table>
    </div>
}



